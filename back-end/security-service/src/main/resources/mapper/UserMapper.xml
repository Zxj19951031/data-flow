<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.authentication.mapper.UserMapper">

    <sql id="Base_Column_List">
        id, username, `password`, create_time, update_time, `status`
    </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.Integer"
            resultType="org.example.authentication.model.User">
        select
        <include refid="Base_Column_List"/>
        from tb_user
        where id = #{id,jdbcType=INTEGER}
    </select>
    <select id="selectByUsername" resultType="org.example.authentication.model.User">
        select
        <include refid="Base_Column_List"/>
        from tb_user
        where username = #{username,jdbcType=VARCHAR} and status = 0
    </select>
    <update id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        update tb_user
        set status = 1
        where id = #{id,jdbcType=INTEGER}
    </update>
    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="org.example.authentication.model.User"
            useGeneratedKeys="true">
        insert into tb_user (username, `password`, create_time, update_time, `status`)
        values (#{username,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR}, #{createTime,jdbcType=TIMESTAMP},
                #{updateTime,jdbcType=TIMESTAMP}, #{status,jdbcType=INTEGER})
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="org.example.authentication.model.User">
        update tb_user
        <set>
            <if test="username != null">
                username = #{username,jdbcType=VARCHAR},
            </if>
            <if test="password != null">
                `password` = #{password,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
</mapper>